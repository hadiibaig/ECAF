                            </svg>
                        </div>
                    </div>
                </div>
                <div class="flex items-center justify-between mb-6">
                    <label for="rememberMe" class="flex items-center gap-x-2">
                        @*<input type="checkbox" class="default:ring-3 cursor-pointer" id="rememberMe" />*@
                        @Html.CheckBoxFor(m => m.RememberMe, new { @class = "default:ring-3 cursor-pointer" })
                        @Html.LabelFor(m => m.RememberMe, new { @class = "text-sm font-normal cursor-pointer" })
                    </label>
                    <a href="/forgot_password" class="text-sm font-normal hover:text-primary pr-3">
                        Forgot
                        Password?
                    </a>
                </div>
                <div class="form-group flex items-center gap-6 pb-2">
                    <input type="submit" value="Log in" class="btn btn-default h-[50px] px-3 text-base uppercase font-medium w-full bgGredient" />
                </div>
                @*<a href="#" class="text-sm font-normal hover:text-primary pr-3 text-center block">
                        Don’t have an account?
                    </a>*@
                @Html.ActionLink("Don’t have an account?", "Register")


            }
    </div>
</div>


