@using ECAF.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<div class="container h-[100vh] lg:px-2 px-4">
    <div class="flex justify-center items-center h-full" id="loginForm">
