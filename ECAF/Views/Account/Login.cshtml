                                      stroke="#ffffff" stroke-width="1.5" stroke-linecap="round"
                                      stroke-linejoin="round" />
                            </svg>
                        </div>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control items-center border border-white h-[50px] px-3 placeholder:!text-white w-full focus:outline-none bg-grayDark pl-[50px]", placeholder = "demo@gmail.com" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
